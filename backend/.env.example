# ============================================
# 基础设置
# ============================================
APP_NAME=openOii-backend
ENVIRONMENT=dev
LOG_LEVEL=INFO

# ============================================
# 数据库配置
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./openoii.db

# ============================================
# Redis 配置
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# CORS 跨域配置
# ============================================
CORS_ORIGINS=["http://localhost:15173"]

# ============================================
# LLM 服务配置
# ============================================
LLM_PROVIDER=doubao
DOUBAO_API_KEY=your_doubao_api_key
DOUBAO_LLM_MODEL=doubao-seed-1-8-251228
DOUBAO_LLM_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# ============================================
# 图像生成服务配置
# ============================================
IMAGE_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
IMAGE_API_KEY=your_image_api_key
IMAGE_MODEL=doubao-seedream-4-5-251128
IMAGE_ENDPOINT=/images/generations
# 图生图开关: true | false
ENABLE_IMAGE_TO_IMAGE=true
# 分镜图生成尺寸（如 2560x1440, 4K 等）
STORYBOARD_IMAGE_SIZE=2560x1440
# 分镜图是否使用角色图作为参考（添加参考图说明到提示词）
# false: 不使用角色图 | true: 使用角色图作为参考
STORYBOARD_USE_CHARACTER_REFERENCE=true



# ============================================
# 视频生成服务配置
# ============================================
# 视频提供商: doubao | openai
VIDEO_PROVIDER=doubao

# 豆包视频配置
DOUBAO_VIDEO_MODEL=doubao-seedance-1-5-pro-251215

# 以下二选一：
# 【固定时长模式】
DOUBAO_VIDEO_FIXED_DURATION=true       # 是否使用固定时长（true=固定时长，false=模型自动选择）
DOUBAO_VIDEO_DURATION=6                 # 固定模式下：4-12之间的整数秒；自动模式下：-1表示模型自动选择
# 【自动模式】
DOUBAO_VIDEO_FIXED_DURATION=false       # 是否使用固定时长（true=固定时长，false=模型自动选择）
DOUBAO_VIDEO_DURATION=-1                # 自动模式下：-1表示模型自动选择


DOUBAO_VIDEO_RATIO=adaptive # 视频宽高比（adaptive=自适应）
DOUBAO_GENERATE_AUDIO=true  # 视频是否生成声音


# 通用视频接口配置 (当 VIDEO_PROVIDER=openai)
# VIDEO_BASE_URL=https://api.example.com/v1
# VIDEO_API_KEY=your_key
# VIDEO_MODEL=video-gen-1
# VIDEO_ENDPOINT=/videos/generations

# 图生视频开关: true | false
ENABLE_IMAGE_TO_VIDEO=true
# 图生视频模式: first_frame | reference，seed1.5 pro 仅支持 first_frame 模式
VIDEO_IMAGE_MODE=first_frame
# 本地开发时是否内联图片
VIDEO_INLINE_LOCAL_IMAGES=true
# 是否将图片生成服务返回的 URL 缓存到本地（true=缓存本地路径，false=保留原始 URL）
CACHE_GENERATED_IMAGES=false

# ============================================
# 其他设置
# ============================================
REQUEST_TIMEOUT_S=120.0
